FROM node:20-alpine AS builder

WORKDIR /app

COPY my_blog_frontend/package*.json ./
RUN npm ci --omit=dev

COPY my_blog_frontend/ ./
RUN npm run build

FROM node:20-alpine

WORKDIR /app

RUN npm install -g serve

COPY --from=builder /app/dist ./dist

EXPOSE 80

ENV NODE_ENV=production

CMD ["serve", "-s", "dist", "-l", "80"]
